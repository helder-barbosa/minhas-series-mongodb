<%- include('../partials/header') %>


  <section id="about">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto">
          <form method="POST">
            <h2>Cadastrar Nova Série</h2>
            <hr>
            <div class="form-group">
              <label for="name">Nome da Série</label>
              <input type="text" class="form-control" name="name" id="name" aria-describedby="nameHelp"
                placeholder="Informe Nome da Série" required>
              <small id="nameHelp" class="form-text text-muted">Nome da série a cadastrar.</small>
            </div>
            <div class="form-group">
              <label for="status">Situação :</label>
              <select class="form-control" id="status" name="status">
                <option value="to-watch">Vou Assistir</option>
                <option value="watching">Estou Assistindo</option>
                <option value="watched">Ja Assisti</option>
              </select>
            </div>
            <button class="btn btn-primary">Salvar</button>
          </form>
        </div>
      </div>
    </div>
  </section>


  <%- include('../partials/footer') %>